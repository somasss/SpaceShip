<div class="album py-5 bg-light">
  <div class= "box2 edit-form">
    <div class="edit-form">

      <h2><%= t('.sign_up') %></h2>
      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name  %><br />
          <%= f.text_field :name, autocomplete: "name", :placeholder => "タナカ タロウ"%>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "333@333.333" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード" %>
        </div>

        <div class="field">
          <%= f.label :admin %><br />
          <%= f.select :admin, [["true", "true"], ["false", "false"]], include_blank: "選択して下さい" %>
        </div>

        <div class="actions">
          <%= f.submit t('.sign_up') %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>