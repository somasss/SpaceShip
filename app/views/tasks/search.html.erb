<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1><%= link_to 'タスク', new_task_path, class: "fw-light" %></h1>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @results.each do |task| %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <h4>タイトル: <%= task.task_title %></h4><br>
                <h4>期日: <%= task.due_date %></h4><br>  
                <h4>内容: <%= task.task_content %></h4><br>
                <h4>ステータス: <%= task.status %></h4><br>
                <h4>ラベル:
                <% task.labels.each do |tasklabel| %>
                  <%= tasklabel.name %>
                <% end %>
                </h4>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'Show', task_path(task.id), class: "btn btn-sm btn-outline-secondary"%>
                    <%= link_to 'Edit', edit_task_path(task.id), class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to 'Destroy', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>