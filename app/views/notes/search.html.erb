<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1><%= link_to 'ノート', notes_path, class: "fw-light" %></h1>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @results.each do |note| %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <h4>タイトル: <%= note.note_title %></h4><br>
                <h5>テキスト: <%= note.text %><</h5><br>  
                <h5>
                  <%if note.youtube.present?%>
                    <iframe width="100%" height="auto" src="https://www.youtube.com/embed/<%= note.youtube%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                  <% end%>
                </h5><br>
                <% note.labels.each do |note_label| %>
                  <%= note_label.name %>
                <% end %>     
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to '詳細', note_path(note.id), class: "btn btn-sm btn-outline-secondary"%>
                    <%= link_to '編集', edit_note_path(note.id), class: "btn btn-sm btn-outline-secondary" %>
                    <%= button_to '削除', note_path(note.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>